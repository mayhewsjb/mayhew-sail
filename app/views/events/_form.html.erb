<div>
  <%= form_with(model: event, class: 'needs-validation', novalidate: true) do |form| %>
    <% if event.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h4>
        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group my-2">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="form-group my-2">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control', rows: 3, required: true %>
    </div>

    <div class="form-group my-2">
      <%= form.label :start_time %>
      <%= form.datetime_field :start_time, class: 'form-control', required: true %>
    </div>

    <div class="form-group my-2">
      <%= form.label :end_time %>
      <%= form.datetime_field :end_time, class: 'form-control', required: true %>
    </div>

    <div class="form-group mt-3">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
