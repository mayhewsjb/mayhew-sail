<%= simple_form_for(post, html: { multipart: true }) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.input :title, label: 'Title', required: true %>

  <%= form.input :content, label: 'Content', as: :text, required: true %>

  <%= form.input :author, label: 'Author' %>

  <%= form.input :photos, label: 'Photos - All photos you wish to be visible in the blog post', as: :file, input_html: { multiple: true } %>

  <%= form.input :thumbnail_image, label: "Thumbnail - The singular photo on the blog post from the blog page", as: :file %>

  <%= form.input :latitude, label: 'Latitude', hint: 'If known, otherwise it will be calculated from address.' %>

  <%= form.input :longitude, label: 'Longitude', hint: 'If known, otherwise it will be calculated from address.' %>

  <div>
    <%= form.button :submit, post.persisted? ? "Update Post" : "Create Post", class: "btn btn-primary" %>
  </div>
<% end %>
